<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.inkiltie.dentalapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.inkiltie.dentalapp.MyTextView
                android:text="DentalApp"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/logo"
                android:textSize="48.5sp"
                android:textColor="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:text="Your Dental Appointment Assistant"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:id="@+id/motto"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="15dp" />

            <TextView
                android:text="Specify Your Preferences"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="122dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                custom:srcCompat="@drawable/los"
                android:id="@+id/arrow"
                android:layout_marginTop="156dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clinic"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:layout_width="249dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/clinic"
                            android:entries="@array/clinics"
                            android:prompt="@string/clinicMsg"
                            android:textAlignment="textEnd"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:background="#ffffff"
                            android:spinnerMode="dialog" />

                        <TextView
                            android:id="@+id/i"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="@dimen/text"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rect2"
                            android:layout_marginTop="1dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/first"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Procedure"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:layout_width="196dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/procedure"
                            android:entries="@array/procedures"
                            android:prompt="@string/procedureMsg"
                            android:textAlignment="textEnd"
                            android:spinnerMode="dialog"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:background="#ffffff"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/i2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="@dimen/text"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rect2"
                            android:layout_marginTop="1dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/second"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:layout_height="wrap_content"
                            android:id="@+id/specialist"
                            android:prompt="@string/specialistMsg"
                            android:entries="@array/specAt"
                            android:textAlignment="textEnd"
                            android:spinnerMode="dialog"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:background="#ffffff"
                            android:layout_weight="1"
                            android:layout_width="205dp" />

                        <TextView
                            android:id="@+id/i3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="@dimen/text"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rect2"
                            android:layout_marginTop="1dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/third"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="226dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/date"
                            android:text="Select appropriate date"
                            android:paddingRight="8dp"
                            android:textSize="16dp"
                            android:textAlignment="textEnd"
                            android:spinnerMode="dialog"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:background="#ffffff"
                            android:layout_weight="1"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/i4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="@dimen/text"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rect2"
                            android:layout_marginTop="1dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fourth"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/time"
                            android:text="Choose appropriate time"
                            android:textSize="16dp"
                            android:paddingRight="8dp"
                            android:textColor="#000000"
                            android:textAlignment="textEnd"
                            android:spinnerMode="dialog"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:background="#ffffff"/>

                        <TextView
                            android:id="@+id/i5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="@dimen/text"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rect2"
                            android:layout_marginTop="1dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fifth"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/pink"
                android:elevation="4dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save and Continue"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>