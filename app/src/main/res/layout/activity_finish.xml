<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.inkiltie.dentalapp.Finish">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.inkiltie.dentalapp.MyTextView
                android:text="DentalApp"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/logo"
                android:textSize="48.5sp"
                android:textColor="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:text="Your Dental Appointment Assistant"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:id="@+id/motto"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="15dp" />

            <TextView
                android:text="Your appointment has been booked!"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="122dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:onClick="arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                custom:srcCompat="@drawable/los"
                android:id="@+id/arrow"
                android:layout_marginTop="156dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clinic"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/clinicRes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clinic"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Procedure"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/procedureRes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Procedure"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/specialistRes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specialist"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"
                        android:id="@+id/textView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/dateRes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@color/textsub"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/timeRes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_list_rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/reminderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder for your appointment has been set"
                        android:textColor="#000000"
                        android:textSize="@dimen/text"
                        android:textAllCaps="false"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="share"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reminder"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="127dp"
                android:background="@drawable/rect"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="74dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share DentalApp"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="okay"
                android:id="@+id/okay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reminder"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="127dp"
                android:background="@drawable/pink"
                android:elevation="6dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Okay, Finish"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>